<nav class="primary-nav">
  <div class="nav-wrapper">
    <a href="/" class="primary-nav__home-icon">
      <span class="logo">{az}</span> Web Developers
    </a>
    <ul id="nav-mobile" class="right hide-on-med-and-down">
    <%= if @current_user do %>
      <li><%= link "Logout", to: auth_path(@conn, :delete), method: :delete, class: "btn" %></li>
    <% else %>
      <li>
        <a class="waves-effect waves-light btn" href="<%= page_path(@conn, :signin) %>">
          Sign in
        </a>
      </li>
    <% end %>
    </ul>
  </div>
</nav>
<%
info = get_flash(@conn, :info)
error = get_flash(@conn, :error)
%>

<div class="flash">
<%= if info do %>
  <div>
    <span class="flash--info"><%= info %></span>
  </div>
<% end %>
<%= if error do %>
  <div>
    <span class="flash--error"><%= error %></span>
  </div>
<% end %>
</div>
